x=input("какого героя вы выберите сф, инвокер, кристалл мэйдэн??? \n")
if x=="стоп":
    print("квест завершен")
while x!="стоп":
    if x=="сф":
        y=input("пойдешь на мид??? \n")
        if y=="да":
            print("молодцы высломали первые башни")
            f=input("пойдете ломать трон??? \n")
            if f=="да":
                print("поздравляю вы победили")
                break
        elif y=="нет":
            print("вам сломали первые башни")
            t=input("пойдете защищаться??? \n")
            if t=="нет":
                print("вы проиграли")
                break
            elif t=="да":
                zxc=input("молодцы, вы защитились, пойдете ломать трон???\n")
                if zxc=="да":
                    print("вы выиграли")
                elif zxc=="нет":
                    print("вы проиграли")
                break
    if x=="инвокер":
        g=input("пойдешь на мид? \n")
        if g=="да":
            print("молодцы высломали первые башни")
            m=input("пойдете ломать трон??? \n")
            if m=="да":
                a=input("вам сломали первые башни, пойдете защищаться??? \n")
                if a=="да" or "нет":
                    print("вы сломали трон, вы выиграли")
                    break
            elif m=="нет":
                e=input("вам сломали вторые башни, пойдете защищаться??? \n")
                if e=="нет" or "да":
                    print("вы проиграли")
                    break
        elif g=="нет":
            print("вам сломали первые башни")
            p=input("пойдете защищаться??? \n")
            if p=="нет":
                q=input("вам,сломали вторые башни, пойдете защищаться??? \n")
                if q=="нет" or "да":
                    print("вы проиграли")
                    break
    if x=="кристалл мэйдэн":
        z=input("пойдешь на т1 помогать тиммейту??? \n")
        if z=="да":
            print("вы сломали первую башню")
            q=input("пойдешь помогать тиммейту на мид??? \n")
            if q=="да":
                print("молодцы, вы сломали вторые башни")
                hiki=input("пойдете ломать трон??? \n")
                if hiki=="да":
                    print("вы победили")
                    break
            if q=="нет":
                print("вам сломали трон вы проиграли")
                break
        if z=="нет":
            print("вам сломали первую башню")
            mq=input("пойдете с тиммейтом ломать башню???")
            if mq=="да":
                print("вы сломали первую башню")
                ananas=input("пойдете ломать трон???")
                if ananas=="да":
                    print("вы выиграли")
                    break
            if mq=="нет":
                print("вам сломали трон вы проиграли")
                break
