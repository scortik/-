cxz=input("какую сторону выберете силы света или силы тьмы? \n")
x=input("какого героя вы выберите сф, инвокер, кристалл мэйдэн или морф??? \n")
if x=="стоп":
    print("квест завершен")
while x!="стоп":
    if x=="сф":
        y=input("пойдешь на мид??? \n")
        if y=="да":
            print("молодцы вы сломали первые башни")
            f=input("пойдете ломать т2??? \n")
            if f=="да":
                print("молодцы")
                qwerty=input("пойдете ломать трон? \n")
                if qwerty=="да":
                    print("победили", cxz)
            if f=="нет":
                print("вам сломали первые башни")
                upio=input("пойдете защищаться??? \n")
                if upio=="да" or upio=="нет":
                    print("вы проиграли")
                    break
                if qwerty=="нет":
                    print("вы проиграли")
                break
        elif y=="нет":
            print("вам сломали первые башни")
            t=input("пойдете защищаться??? \n")
            if t=="нет":
                print("вы проиграли")
                break
            elif t=="да":
                zxc=input("молодцы, вы защитились, пойдете ломать трон???\n")
                if zxc=="да":
                    print("победили", cxz)
                elif zxc=="нет":
                    print("вы проиграли")
    if x=="инвокер":
        g=input("пойдешь на верхнюю линию? \n")
        if g=="да":
            print("молодцы высломали первые башни")
            m=input("пойдете ломать трон??? \n")
            if m=="да":
                a=input("вам сломали первые башни, пойдете защищаться??? \n")
                if a=="да" or a =="нет":
                    print("вы сломали трон, победили", cxz)
                    break
            elif m=="нет":
                e=input("вам сломали вторые башни, пойдете защищаться??? \n")
                if e=="нет" or e =="да":
                    print("вы проиграли")
                    break
        elif g=="нет":
            print("вам сломали первые башни")
            p=input("пойдете защищаться??? \n")
            if p=="нет":
                q=input("вам,сломали вторые башни, пойдете защищаться??? \n")
                if q=="нет" or q=="да":
                    print("вы проиграли")
                    break
            if p=="да":
                print("молодцы высломали первые башни")
                asdf=input("пойдете ломать трон? \n")
                if asdf=="да":
                    print("победили", cxz)
                if asdf=="нет":
                    print("вы проиграли")
                    break
    if x=="кристалл мэйдэн":
        z=input("пойдешь на т1 помогать тиммейту??? \n")
        if z=="да":
            print("вы сломали первую башню")
            q=input("пойдешь помогать тиммейту на мид??? \n")
            if q=="да":
                print("молодцы, вы сломали вторые башни")
                hiki=input("пойдете ломать трон??? \n")
                if hiki=="да":
                    print("победили", cxz)
                    break
            if q=="нет":
                print("вам сломали трон вы проиграли")
                break
        if z=="нет":
            print("вам сломали первую башню")
            mq=input("пойдете с тиммейтом ломать башню??? \n")
            if mq=="да":
                print("вы сломали первую башню")
                ananas=input("пойдете ломать трон??? \n")
                if ananas=="да":
                    print("победили", cxz)
                    break
            if mq=="нет":
                print("вам сломали трон вы проиграли")
                break
            if ananas=="нет":
                print("вам сломали трон вы проиграли")
                break

    if x=="морф":
        morf=input("пойдешь на нижнюю линию??? \n")
        if morf=="да":
            print("молодцы вы сломали первые башни")
            sh=input("пойдете ломать башню на верхней линии??? \n")
            if sh=="да":
                print("молодцы")
                hikikomorikai=input("пойдете ломать трон? \n")
                if hikikomorikai=="да":
                    print("победили", cxz)
                    break
        if morf=="нет":
            print("вам сломали башни на нижней линии")
            luna=input("пойдете защищаться? \n")
            if luna=="да" or "нет":
                print("вы проиграли")
                break
            if sh=="нет":
                print("вы проиграли")
                break
